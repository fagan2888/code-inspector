Option Strict On

Public Interface IArchetypeItemNode
    Property Text() As String
    Property Description() As String
    Property RuntimeNameText() As String
    ReadOnly Property RM_Class() As RM_Structure_RunTime
    Property Occurrences() As Count
    Property RuntimeName() As String
    ReadOnly Property NodeId() As String
    ReadOnly Property TypeName() As String
    Property RuntimeNameDescription() As String
    Sub Translate()
    Sub Specialise()
    Function Copy() As IArchetypeItemNode
End Interface

Public Interface IArchetypeCompoundNode : Inherits IArchetypeItemNode
    ReadOnly Property isFixed() As Boolean
    Property isOrdered() As Boolean
End Interface

Public Interface iArchetypeElementNode
    Inherits IArchetypeItemNode
    Property Constraint() As Constraint
    ReadOnly Property DataType() As String
    ReadOnly Property isReference() As Boolean
    ReadOnly Property hasReferences() As Boolean
End Interface


